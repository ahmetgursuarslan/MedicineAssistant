{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "build",
    "declaration": false,
    "sourceMap": false,
    "removeComments": true,
    "incremental": false
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "src/openapi/**/*",
    "node_modules",
    "build",
    "dist"
  ],
  "include": ["src/**/*.ts"]
}