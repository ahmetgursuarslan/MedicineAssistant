{
  "compilerOptions": {
    "experimentalDecorators": true,                                
    "module": "commonjs",
    "baseUrl": "./src",                               
    "outDir": "build",                                   
    "target": "es2017",
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,                             
    "skipLibCheck": true                                 
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*.js.map": true
  }
}
